@model LoginViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer LocString

<br />
<div class="row">
    <div class="col-md-6 col-lg-3">
        <form asp-action="Login" method="post">
            @if (ViewBag.Message != null)
            {
                <p style="color:red"> @ViewBag.Message </p>
            }
            <div class="form-group">
                <label asp-for="Email">@LocString["User"]:</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">@LocString["Password"]:</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
            <br />
                <div class="g-recaptcha" data-sitekey="@ViewBag.SecretKeyHtml"></div>
            </div>
            <button type="submit" class="btn btn-success">@LocString["LoginBtn"]</button>
            <a href="reset" class="btn btn-default">@LocString["Reset"]</a>
        </form>
        <br />
        <div asp-validation-summary="All"></div>
    </div>
</div>

@section Scripts
{
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>

    <script type="text/javascript">
    </script>
}