@using Microsoft.AspNetCore.Http.Extensions
@*@{
    if (ViewContext.ViewBag.IsShopingCart == "Shoping Cart") // or other custom logic
    {
        Layout = "~/Views/Shared/_ShopingCartLayout.cshtml";
    }
    if (ViewContext.ViewBag.Shop=="Shop")
    {
        Layout = "_Layout";
    }
}*@
@{
    var context = Context.Request.GetEncodedUrl();
}

@if (context.Contains("admin") || context.Contains("Admin") || context.Contains("account") || context.Contains("Products/create"))
 {
    Layout = "_ShopingCartLayout";
}
 else{

    Layout = "_Layout";
 }
